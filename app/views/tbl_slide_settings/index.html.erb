<h1 class="index1">Slide Settings Management</h1>
<div class="index3">
  <%= link_to 'Add New Slide Setting', new_tbl_slide_setting_path,:class => "btn_submit" %>
</div>
<table class="index_2">
  <thead>
    <tr>
      <th>Setting</th>
      <th>Offsetxin</th>
      <th>Offsetxout</th>
      <th>Offsetyin</th>
      <th>Offsetyout</th>
      <th>Rotatein</th>
      <th>Rotateout</th>
      <th>Fadein</th>

      <th>Easingin</th>


      <th>Transition2d</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tbl_slide_settings.each do |tbl_slide_setting| %>
      <tr>
        <td><%= tbl_slide_setting.Setting %></td>
        <td><%= tbl_slide_setting.offsetxin %></td>
        <td><%= tbl_slide_setting.offsetxout %></td>
        <td><%= tbl_slide_setting.offsetyin %></td>
        <td><%= tbl_slide_setting.offsetyout %></td>
        <td><%= tbl_slide_setting.rotatein %></td>
        <td><%= tbl_slide_setting.rotateout %></td>
        <td><%= tbl_slide_setting.fadein %></td>

        <td><%= tbl_slide_setting.easingin %></td>
        <td><%= tbl_slide_setting.transition2d %></td>

        <td><%= link_to 'View', tbl_slide_setting , :class => "btn_submit" %></td>
        <td><%= link_to 'Edit', edit_tbl_slide_setting_path(tbl_slide_setting) , :class => "btn_submit" %></td>
        <td><%= link_to 'Delete', tbl_slide_setting, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn_submit" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
