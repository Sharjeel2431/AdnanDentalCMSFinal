<h1 class="index1">Transition Management</h1>
<div class="index3">
  <%= link_to 'Add New Transition', new_transition_path, :class => "btn_submit" %>
</div>
<table class="index2">
  <thead>
    <tr>
      <th>Transitionid</th>
      <th>Transitionname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transitions.each do |transition| %>
      <tr>
        <td><%= transition.TransitionID %></td>
        <td><%= transition.TransitionName %></td>
        <td><%= link_to 'View', transition %></td>
        <td><%= link_to 'Edit', edit_transition_path(transition) %></td>
        <td><%= link_to 'Delete', transition, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
